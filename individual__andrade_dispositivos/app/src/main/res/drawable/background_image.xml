<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#faa307"
                android:centerColor="#f48c06"
                android:endColor="#e85d04"
                android:angle="45"/>
            <corners android:radius="8dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</layer-list>
